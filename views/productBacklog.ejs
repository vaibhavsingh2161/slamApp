<%- include("header") -%>

    <!--TITLE-->
    <section id="title">
        <div class="container-fluid1">
            <!-- Nav Bar -->
            <nav class="navbar navbar-expand-lg navbar-dark">

                <img id="logo" src="images/logo.png" alt="slam-logo">
                <a class="navbar-brand" href="">Slam</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo03">

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Calendar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>

                    </ul>

                    
                </div>


            </nav>

            <div>
                <h1>
                    <%= listTitle %>
                </h1>
            </div>

            <div class="box">

                <% newListItems.forEach(function(item){ %>
                    <form action="/delete" method="post">
                        <div class="item">
                            <button class="btnRemove" onChange="this.form.submit()" name="checkbox"
                                value="<%=item._id %>" type="submit"><span class="material-symbols-outlined">
                                    delete
                                </span></button>
                            <p class="text">
                                <%= item.name %>
                            </p>
                        </div>
                        <input type="hidden" name="listName" value="<%=listTitle %>"></input>
                    </form>

                    <% }) %>

                        <form action="/productbacklog" method="post">
                            <input class="text" type="text" name="newEntry" placeholder="'Add Here....'"
                                autocomplete="off">
                            <button class="btnAdd" type="submit" name="list" value="<%= listTitle %>">+</button>
                        </form>
            </div>

        </div>

    </section>

    <%- include("footer") -%>